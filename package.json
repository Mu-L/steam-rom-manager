{
  "name": "steam-rom-manager",
  "version": "2.5.30",
  "license": "GPL-3.0",
  "description": "An app for managing ROMs in Steam",
  "author": {
    "name": "cbartondock",
    "url": "https://github.com/cbartondock",
    "email": "cbartondock@gmail.com"
  },
  "build": {
    "appId": "SteamGridDB.SteamROMManager",
    "productName": "Steam ROM Manager",
    "compression": "normal",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "msi",
        "nsis",
        "portable"
      ],
      "icon": "./src/assets/icons/win.ico"
    },
    "portable": {
      "artifactName": "${productName}-portable-${version}.${ext}"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "./src/assets/icons"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "./src/assets/icons/mac.icns"
    },
    "files": [
      "dist/**/*",
      "workers/*",
      "package.json",
      "!node_modules/leveldown/{build,deps}/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "doZennn"
    }
  },
  "main": "./dist/main.bundle.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/SteamGridDB/steam-rom-manager"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "presets:validate": "ts-node ./scripts/validate-files.ts",
    "presets:modify": "ts-node ./scripts/update-files.ts",
    "presets:version": "node ./scripts/version-files.js",
    "update:deps": "npm-check-updates --interactive --format group",
    "pretty:check": "yarn prettier . --check",
    "pretty:write": "yarn prettier . --write",
    "start": "electron ./dist/main.bundle.js",
    "watch:main": "webpack --watch --config ./webpack/main.js",
    "watch:renderer": "webpack --watch --config ./webpack/renderer.js",
    "prepare:build": "cross-env tsc -P ./webpack",
    "build:main": "cross-env NODE_ENV=production webpack --config ./webpack/main.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./webpack/renderer.js",
    "prebuild:dist": "yarn run prepare:build",
    "build:dist": "rimraf dist && yarn run build:main && yarn run build:renderer",
    "build:win": "electron-builder --win --ia32 --x64",
    "build:linux": "electron-builder --linux --x64",
    "build:mac": "electron-builder --mac --x64",
    "build:linuxdir": "electron-builder --linux --x64 --dir && echo '24.1.3' > release/linux-unpacked/version && cp LICENSE release/linux-unpacked/",
    "build:flatpak": "electron-installer-flatpak --src release/linux-unpacked --dest release/ --arch x64 --config flatconf.json"
  },
  "dependencies": {
    "@angular/animations": "^18.2.4",
    "@angular/common": "^18.2.4",
    "@angular/compiler": "^18.2.4",
    "@angular/core": "^18.2.4",
    "@angular/forms": "^18.2.4",
    "@angular/platform-browser": "^18.2.4",
    "@angular/platform-browser-dynamic": "^18.2.4",
    "@angular/router": "^18.2.4",
    "@electron/remote": "^2.1.2",
    "@node-steam/vdf": "^2.2.0",
    "ajv": "^8.17.1",
    "angular-draggable-droppable": "^8.0.0",
    "async": "^3.2.6",
    "bcp-47": "^2.1.0",
    "better-sqlite3": "^11.3.0",
    "binary-vdf-2": "^0.2.2",
    "blizzard-product-parser": "https://github.com/cbartondock/blizzard-product-parser.git",
    "chai": "^5.1.1",
    "cli-color": "^2.0.4",
    "colornames": "^1.1.1",
    "copy-webpack-plugin": "^12.0.2",
    "crc": "^4.3.2",
    "detect-file-encoding-and-language": "^2.4.0",
    "electron-log": "^5.2.0",
    "electron-updater": "^6.3.4",
    "electron-window-state": "^5.0.3",
    "fast-memoize": "^2.5.2",
    "fast-xml-parser": "^4.5.0",
    "file-saver": "^2.0.5",
    "file-uri-to-path": "^2.0.0",
    "fs-extra": "^11.2.0",
    "fuzzysort": "^3.1.0",
    "glob": "^11.0.0",
    "he": "^1.2.0",
    "highlight.js": "^11.10.0",
    "is-color": "^1.0.2",
    "js-yaml": "^4.1.0",
    "loader-utils": "^3.3.1",
    "lodash": "^4.17.21",
    "long": "^5.2.3",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.2.0",
    "markdown-it-toc-done-right": "^4.2.0",
    "mime-types": "^2.1.35",
    "minimatch": "^10.0.1",
    "ngx-color-picker": "^17.0.0",
    "node-fetch": "^3.3.2",
    "os-name": "^6.0.0",
    "probe-image-size": "^7.2.3",
    "rangy": "^1.3.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "steam-categories": "^1.1.4",
    "steam-shortcut-editor": "^3.1.3",
    "steamgriddb": "^2.2.0",
    "to-css": "^1.2.1",
    "windows-shortcuts-ps": "https://github.com/cbartondock/windows-shortcuts-ps.git",
    "winreg": "^1.2.5",
    "xdg-parse": "^1.1.0",
    "yaml": "^2.5.1",
    "yargs": "^17.7.2",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@types/async": "^3.2.24",
    "@types/cli-color": "^2.0.6",
    "@types/crc": "^3.8.3",
    "@types/fs-extra": "~11.0.4",
    "@types/he": "^1.2.3",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.7",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.5.5",
    "@types/rangy": "0.0.38",
    "@types/wicg-file-system-access": "^2023.10.5",
    "@types/winreg": "^1.2.36",
    "angular2-template-loader": "^0.6.2",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^32.1.0",
    "electron-builder": "^25.0.5",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.9.1",
    "node-abi": "^3.67.0",
    "npm-check-updates": "^17.1.1",
    "postcss": "^8.4.47",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "sass": "^1.78.0",
    "sass-loader": "^16.0.1",
    "to-string-loader": "^1.2.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "upath": "^2.0.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^6.0.1"
  }
}
